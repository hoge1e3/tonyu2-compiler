\initialState(context) {
    let mat=new Matrix;
    let r=3;
    for (let i=0;i<r;i++) {
        for (let j=0;j<r;j++) {
            mat.set(j,i,0);
        }
    }
    let player=1;
    let state=new Board{mat,player};
    return state;
}
